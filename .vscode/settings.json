{
    "makefile.extensionOutputFolder": "./.vscode",

    "my_binary_name": "monofon_ESP_6_4",
    "my_build_toolchain" : "esp32s3",
    "my_build_chip" : "ESP32SX",
    "my_svd_name":  "esp32s3",

    "cortex-debug.gdbPath": "${env:HOME}/opt/esp/tools/tools/xtensa-esp32s3-elf/esp-2021r2-patch3-8.4.0/xtensa-esp32s3-elf/bin/xtensa-esp32s3-elf-gdb",
    "cortex-debug.openocdPath.linux": "${env:HOME}/opt/esp/tools/tools/openocd-esp32/v0.11.0-esp32-20211220/openocd-esp32/bin/openocd",

    "terminal.integrated.env.linux": {
        "PATH": "${env:PATH}:"
    },

    "makefile.configurations": [
        {
            "name": "Default",
            "makeArgs": [
                "-C",
                "build",
                "app",
                "--no-print-directory",
                "-f", 
                "../Makefile.env",
                "-f", 
                "Makefile",
//                "VERBOSE=1",
            ]
        }
    ],
    "idf.adapterTargetName": "esp32s3",
    "idf.flashType": "UART",
    "idf.monitorBaudRate":"115200",
    "idf.flashBaudRate":"1500000",
    "files.associations": {
        "*.pug": "jade",
        "esp_peripherals.h": "c",
        "periph_sdcard.h": "c",
        "*.ipp": "c",
        "reporter.h": "c",
        "task.h": "c",
        "freertos.h": "c",
        "ratio": "cpp",
        "stateconfig.h": "c",
        "netdb.h": "c",
        "me_slot_config.h": "c",
        "random": "c",
        "portmacro.h": "c",
        "mcpwm.h": "c",
        "diskio.h": "c",
        "sdcard_scan.h": "c",
        "queue.h": "c",
        "typeinfo": "c",
        "stdio.h": "c",
        "string.h": "c",
        "esp_heap_caps.h": "c"
    },
    "idf.portWin": "COM43"
}
